package tests;

public class WithoutAnyAPIfindSUbstring {
	public static void main(String[] args) {
		String s="programming is programming";
		String s1="gram";
		char c1[]=s.toCharArray();
		char c2[] = s1.toCharArray();
		int l1=c1.length;
		int l2=c2.length;
		int[] sI=new int[100];
		int[] eI=new int[100];
		int strI=0,endI=0,count=0,k=0,temp=0;
		for (int i = 0; i < l1.length-1; i++) {
			if(c2[0]==c1[i]){
				strI=i;
				k=Recurse(l1,l2,c1,c2);
				if(k==1){
					i=i+4;
					endI=i;
					sI[temp++]=strI;
					eI[temp]=endI;
				}
				
			}
		}
		
		
		
	}
	static int Recurse(int i,int j,char c1[],char c2[]){
		
		if(j==0){
			
		return 1;	
		}
		else if(c1[i]==c2[j]){
			i++;
			j++;
			return Recurse(i,j,c1,c2);
		}
		return 0;
		
	}
}

