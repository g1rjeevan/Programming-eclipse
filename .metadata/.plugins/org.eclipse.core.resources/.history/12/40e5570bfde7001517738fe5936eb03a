package com.G1.Java.Eg1.Person;

import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.Transaction;
import org.hibernate.cfg.Configuration;

public class PersonController {

	public static void main(String[] args) {
		//Component 1
				Configuration cfg=new Configuration();
				cfg.configure();
				cfg.addAnnotatedClass(PersonDTO.class);
				//component 2
				SessionFactory factory=cfg.buildSessionFactory();
				//component 3
				Session session = factory.openSession();
		Session session=PersonController.sessionReturner();
		Transaction tx=PersonController.tx();
		PersonDTO pdto=new PersonDTO();
		PersonDAO pdao=new PersonDAO();
		pdao.add(pdto);
		session.save(pdto);
		tx.commit();
		session.close();

	}
	public static Session sessionReturner(){
		//Component 1
		Configuration cfg=new Configuration();
		cfg.configure();
		cfg.addAnnotatedClass(PersonDTO.class);
		//component 2
		//SessionFactory factory=cfg.buildSessionFactory();
		//component 3
		Session session = cfg.buildSessionFactory().openSession();
		return session;
	}
	public static Transaction tx(){
		Session session=PersonController.sessionReturner();
		//component 1 from component 3
		Transaction tx=session.beginTransaction();
		return tx;
	}

}
