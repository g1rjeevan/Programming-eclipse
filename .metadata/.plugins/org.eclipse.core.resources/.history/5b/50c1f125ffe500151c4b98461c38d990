package tests;

public class WithoutAnyAPIfindSUbstring {
	public static void main(String[] args) {
		String s="programming is programming";
		String s1="gram";
		char c1[]=s.toCharArray();
		char c2[] = s1.toCharArray();
		int[] sI=new int[100];
		int[] eI=new int[100];
		int strI=0,endI=0,count=0,k=0,temp=0;
		for (int i = 0; i < c1.length; i++) {
			if(c2[i]==c1[i]){
				strI=i;
				for (int j = 1; j < c2.length; j++) {
					i++;
				
					if(c2[j]==c1[i]){
						count++;
						
					}
					if(count==c2.length){
						endI=strI+count;
						count=0;
						
					}
				}
				sI[k]=strI;
				eI[k]=endI;
				strI=0;
				endI=0;
				k++;
			}
			
		}
		for (int i = 0; i < eI.length; i++) {
			if(sI[i]!=0&&eI[i]!=0){
				temp++;
				System.out.println(temp+" "+sI[i]+" "+eI[i]);
			}
		}
	}

}
