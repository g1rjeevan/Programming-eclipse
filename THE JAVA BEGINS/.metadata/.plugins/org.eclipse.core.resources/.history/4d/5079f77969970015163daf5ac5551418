package com.hrs;

public class A_E_R_Replacer {

	private static int[] arr1s;

	public static void main(String[] args) {
		int arr[]={1,3,2,2,2,2,3,3,3};
		arr1s = new int[arr.length];
		int count=1;
		System.out.println(arr.length);
		for(int i=0;i<arr.length;i++)

		{
			for(int j=0;j<arr.length;j++)
			{
				if(i==j)
					j++;
				if(arr[i]==arr[j]){
					count++;
			}
			}	
			System.out.println(arr[i]+" repeated "+count);
			arr1s[i]=arr[i];
			i=i+count-1;
			count=1;

	}
		for(int k=0;k<arr.length;k++)

		{
			System.out.print(arr[k]+" ");
		}
		System.out.println();
		for(int k=0;k<arr.length;k++)

		{
			System.out.print( arr1s[k]+" ");
		}
		
		
}
		
}

