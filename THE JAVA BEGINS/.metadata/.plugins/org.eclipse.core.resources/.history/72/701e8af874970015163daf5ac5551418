package com.hrs;

public class Pattern2 {

	public static void main(String[] args) {
		
		int row=10,star=1,space=9,mid=row/2+1;
		for(int i=0;i<row;i++)
		{
			for(int j=0;j<space;j++)
			{
				System.out.print("  ");
			}
			for(int j=0;j<star;j++)
			{
			System.out.print("* ");
			}
			if(i<=mid){
			star+=2;
			space--;
			System.out.println();
		
			}
			else
				{
					star-=2;
					space++;
					System.out.println();
				
					}
			
		}
		

	}

}
